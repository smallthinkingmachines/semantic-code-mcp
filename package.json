{
  "name": "semantic-code-mcp",
  "version": "0.1.0",
  "description": "MCP server for semantic code search using AST-aware chunking and vector embeddings",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "semantic-code-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "semantic-search",
    "mcp-server",
    "code-understanding",
    "vector-search",
    "ai-coding",
    "claude-code",
    "cursor",
    "windsurf",
    "cline"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.23.0",
    "@modelcontextprotocol/sdk": "^1.25.0",
    "@huggingface/transformers": "^3.8.0",
    "chokidar": "^3.6.0",
    "glob": "^10.3.0",
    "tree-sitter": "^0.25.0",
    "tree-sitter-go": "^0.25.0",
    "tree-sitter-javascript": "^0.25.0",
    "tree-sitter-python": "^0.25.0",
    "tree-sitter-rust": "^0.23.3",
    "tree-sitter-typescript": "^0.23.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
